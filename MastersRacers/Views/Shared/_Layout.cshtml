<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Masters Racers</title>
    <link href="/Content/dist/css/app.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="/Scripts/build/jquery-bundle.min.js"></script>
    <script src="/Scripts/build/angular-bundle.min.js"></script>
    <script src="/Scripts/build/app-bundle.js"></script>
</head>
<body ng-app="racerApp" layout-fill ng-cloak>
    <div flex>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Masters Racers</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
